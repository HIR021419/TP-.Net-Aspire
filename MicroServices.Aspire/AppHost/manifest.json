{
  "$schema": "https://json.schemastore.org/aspire-8.0.json",
  "resources": {
    "username": {
      "type": "parameter.v0",
      "value": "{username.inputs.value}",
      "inputs": {
        "value": {
          "type": "string"
        }
      }
    },
    "password": {
      "type": "parameter.v0",
      "value": "{password.inputs.value}",
      "inputs": {
        "value": {
          "type": "string"
        }
      }
    },
    "postgres-todos": {
      "type": "container.v0",
      "connectionString": "Host={postgres-todos.bindings.tcp.host};Port={postgres-todos.bindings.tcp.port};Username={username.value};Password={password.value}",
      "image": "docker.io/library/postgres:17.6",
      "bindMounts": [
        {
          "source": "../TodoService/Data",
          "target": "/docker-entrypoint-initdb.d",
          "readOnly": false
        }
      ],
      "env": {
        "POSTGRES_HOST_AUTH_METHOD": "scram-sha-256",
        "POSTGRES_INITDB_ARGS": "--auth-host=scram-sha-256 --auth-local=scram-sha-256",
        "POSTGRES_USER": "{username.value}",
        "POSTGRES_PASSWORD": "{password.value}",
        "POSTGRES_DB": "Todos"
      },
      "bindings": {
        "tcp": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 5432
        }
      }
    },
    "Todos": {
      "type": "value.v0",
      "connectionString": "{postgres-todos.connectionString};Database=Todos"
    },
    "postgres-users": {
      "type": "container.v0",
      "connectionString": "Host={postgres-users.bindings.tcp.host};Port={postgres-users.bindings.tcp.port};Username={username.value};Password={password.value}",
      "image": "docker.io/library/postgres:17.6",
      "bindMounts": [
        {
          "source": "../UserService/Data",
          "target": "/docker-entrypoint-initdb.d",
          "readOnly": false
        }
      ],
      "env": {
        "POSTGRES_HOST_AUTH_METHOD": "scram-sha-256",
        "POSTGRES_INITDB_ARGS": "--auth-host=scram-sha-256 --auth-local=scram-sha-256",
        "POSTGRES_USER": "{username.value}",
        "POSTGRES_PASSWORD": "{password.value}",
        "POSTGRES_DB": "Users"
      },
      "bindings": {
        "tcp": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 5432
        }
      }
    },
    "Users": {
      "type": "value.v0",
      "connectionString": "{postgres-users.connectionString};Database=Users"
    },
    "pubsub": {
      "type": "dapr.component.v0",
      "daprComponent": {
        "type": "pubsub"
      }
    },
    "userservice": {
      "type": "project.v0",
      "path": "../UserService/UserService.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{userservice.bindings.http.targetPort}",
        "ConnectionStrings__Users": "{Users.connectionString}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http"
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http"
        }
      }
    },
    "userservice-dapr": {
      "type": "dapr.v0",
      "dapr": {
        "application": "userservice",
        "appId": "userservice",
        "components": [
          "pubsub"
        ]
      }
    },
    "todoservice": {
      "type": "project.v0",
      "path": "../TodoService/TodoService.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{todoservice.bindings.http.targetPort}",
        "ConnectionStrings__Todos": "{Todos.connectionString}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http"
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http"
        }
      }
    },
    "todoservice-dapr": {
      "type": "dapr.v0",
      "dapr": {
        "application": "todoservice",
        "appId": "todoservice",
        "components": [
          "pubsub"
        ]
      }
    }
  }
}